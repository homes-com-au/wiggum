WIGGUM_PATH=wiggum-official
# allows you to point to another location for Wiggum
# wiggum-official will download Wiggum from GitHub
# accepts a local path, eg: ./../wiggum-local/wiggum.sh
# default value = wiggum-official

VERSION_OVERRIDE=latest
# allows you to pin your Wiggum compliance to a specific version
# version overrides are ignored when using WIGGUM_PATH
# accepts a version number, eg: 0001, 0202, 0011
# default value = latest

USE_DOT_INFRA=true
# use the ./infra directory for docker, buildkite and terraform files
# accepts boolean values: true|false
# default value = false

CHECK_README=true
# accepts boolean values: true|false
# default value = true

CHECK_DOCKER=true
# accepts boolean values: true|false
# default value = true

CHECK_TERRAFORM=true
# accepts boolean values: true|false
# default value = true

CHECK_BUILDKITE=true
# accepts boolean values: true|false
# default value = true

CHECK_TESTS=true
# accepts boolean values: true|false
# default value = true

CHECK_DEPENDENCIES=true
# accepts boolean values: true|false
# default value = true
